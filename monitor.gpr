with "inotify";

project Monitor is

   for Languages use ("Ada");

   for Create_Missing_Dirs use "True";

   for Object_Dir  use "build/obj";
   for Exec_Dir use "build/bin";

   for Source_Dirs use ("examples");

   Executables := (
      "monitor"
   );

   for Main use Executables;

   package Builder is
      for Executable ("monitor") use "inotify-ada";
   end Builder;

   package Compiler renames Inotify.Compiler;
   package Binder renames Inotify.Binder;

   package Linker is
      case Inotify.Build_Mode is
         when "coverage" =>
            for Switches ("ada") use ("-lgcov", "-fprofile-arcs");
         when "profiling" =>
            for Switches ("ada") use ("-pg");
         when others =>
            for Switches ("ada") use ("-s", "-Wl,--gc-sections");
      end case;
   end Linker;

end Monitor;
